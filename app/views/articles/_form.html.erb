<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
      <div class="form-group row mb-4">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Titel of article" %>
          </div>
        </div>
        <div class="form-group row mb-4">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, class: "form-control shadow rounded", rows: 10, placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row mb-4">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, 
            { prompt: "Make your selection from the list below (can be empty)"}, 
            { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>
        <div class="form-group row justify-content-center mb-4">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
        
      <% end %>
    </div>


    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "fit-content text-info mb-3" %>
  </div>
</div>